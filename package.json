{
  "name": "task-management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx",
    "stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,scss}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,scss}\"",
    "lint:fix": "npm run lint -- --fix && npm run stylelint -- --fix && npm run format:write",
    "lint:staged": "npx lint-staged",
    "lint:all": "npm run lint && npm run stylelint && npm run format",
    "preflight": "npm run build && npm run lint:all",
    "dev": "npm run generate:scss-vars && vite",
    "build": "npm run generate:scss-vars && npm run lint && npm run stylelint && npm run format && tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest --project unit",
    "test:ui": "vitest --ui --coverage --project unit",
    "test:coverage:unit": "vitest run --coverage --project unit",
    "check:all": "npm run preflight && npm run test:coverage:unit",
    "generate:scss-vars": "ts-node src/utils/generateScssVariables.ts",
    "server": "json-server --watch src/db.json --port 3000"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@hookform/resolvers": "^5.2.0",
    "@mui/material": "^7.2.0",
    "@mui/x-date-pickers": "^8.9.0",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.11.0",
    "dayjs": "^1.11.13",
    "js-cookie": "^3.0.5",
    "json-server": "^1.0.0-beta.3",
    "loglevel": "^1.9.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-icons": "^5.5.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.2",
    "react-toastify": "^11.0.5",
    "sass": "^1.89.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.25.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/google.maps": "^3.58.1",
    "@types/jest": "^30.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-slick": "^0.23.13",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "commitlint": "^19.8.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.5.3",
    "stylelint": "^16.21.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.0.5",
    "vite-plugin-istanbul": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "src/**/*.{scss,css}": [
      "stylelint --fix"
    ]
  }
}
